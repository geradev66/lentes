{
  "openapi": "3.0.3",
  "info": {
    "title": "API Lentes",
    "version": "1.0.0",
    "description": "API generada a partir de contrato.json"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nombre_completo": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "telefono": {
            "type": "string"
          },
          "direccion": {
            "type": "string"
          },
          "fecha_de_creacion": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "UserRegistration": {
        "type": "object",
        "required": [
          "nombre_completo",
          "email",
          "contraseña"
        ],
        "properties": {
          "nombre_completo": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          },
          "contraseña": {
            "type": "string",
            "minLength": 8
          },
          "telefono": {
            "type": "string"
          },
          "direccion": {
            "type": "string"
          }
        }
      },
      "UserLogin": {
        "type": "object",
        "required": [
          "email",
          "contraseña"
        ],
        "properties": {
          "email": {
            "type": "string",
            "format": "email"
          },
          "contraseña": {
            "type": "string"
          }
        }
      },
      "UserProfileUpdate": {
        "type": "object",
        "properties": {
          "nombre_completo": {
            "type": "string"
          },
          "telefono": {
            "type": "string"
          },
          "direccion": {
            "type": "string"
          }
        }
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "category_id": {
            "type": "integer"
          },
          "nombre_producto": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "marca": {
            "type": "string"
          },
          "activo": {
            "type": "boolean"
          },
          "imagenes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "skus": {
            "type": "array",
            "items": {
              "": "#/components/schemas/Sku"
            }
          }
        }
      },
      "Sku": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "sku": {
            "type": "string"
          },
          "variant_name": {
            "type": "string"
          },
          "precio": {
            "type": "number",
            "format": "float"
          },
          "precio_antes": {
            "type": "number",
            "format": "float"
          },
          "stock": {
            "type": "integer"
          },
          "activo": {
            "type": "boolean"
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "nombre_categoria": {
            "type": "string"
          },
          "slug": {
            "type": "string"
          }
        }
      },
      "Cart": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "user_id": {
            "type": "integer"
          },
          "status": {
            "type": "string"
          },
          "fecha": {
            "type": "string",
            "format": "date-time"
          },
          "items": {
            "type": "array",
            "items": {
              "": "#/components/schemas/CartItem"
            }
          },
          "subtotal": {
            "type": "number",
            "format": "float"
          }
        }
      },
      "CartItem": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "sku_productos": {
            "type": "integer"
          },
          "cantidad": {
            "type": "integer"
          },
          "precio_unitario": {
            "type": "number",
            "format": "float"
          },
          "producto": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "nombre_producto": {
                "type": "string"
              }
            }
          }
        }
      },
      "Order": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "user_id": {
            "type": "integer"
          },
          "status": {
            "type": "string"
          },
          "moneda": {
            "type": "string"
          },
          "subtotal": {
            "type": "number",
            "format": "float"
          },
          "costo_envio": {
            "type": "number",
            "format": "float"
          },
          "descuento": {
            "type": "number",
            "format": "float"
          },
          "total": {
            "type": "number",
            "format": "float"
          }
        }
      }
    }
  },
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Registra un nuevo usuario",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "": "#/components/schemas/UserRegistration"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuario registrado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "user": {
                      "": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Inicia sesión y devuelve JWT",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Inicio de sesión exitoso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "token": {
                      "type": "string"
                    },
                    "user": {
                      "": "#/components/schemas/User"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/profile": {
      "get": {
        "summary": "Obtiene el perfil del usuario autenticado",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Perfil del usuario",
            "content": {
              "application/json": {
                "schema": {
                  "": "#/components/schemas/User"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Actualiza el perfil del usuario autenticado",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "": "#/components/schemas/UserProfileUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Perfil actualizado",
            "content": {
              "application/json": {
                "schema": {
                  "": "#/components/schemas/User"
                }
              }
            }
          }
        }
      }
    },
    "/products": {
      "get": {
        "summary": "Obtiene lista de productos",
        "responses": {
          "200": {
            "description": "Lista de productos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "products": {
                      "type": "array",
                      "items": {
                        "": "#/components/schemas/Product"
                      }
                    },
                    "total": {
                      "type": "integer"
                    },
                    "page": {
                      "type": "integer"
                    },
                    "limit": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/{id}": {
      "get": {
        "summary": "Obtiene detalles de un producto",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalles del producto",
            "content": {
              "application/json": {
                "schema": {
                  "": "#/components/schemas/Product"
                }
              }
            }
          }
        }
      }
    },
    "/categories": {
      "get": {
        "summary": "Obtiene lista de categorías",
        "responses": {
          "200": {
            "description": "Lista de categorías",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "categories": {
                      "type": "array",
                      "items": {
                        "": "#/components/schemas/Category"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/cart": {
      "get": {
        "summary": "Obtiene el carrito del usuario",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Carrito del usuario",
            "content": {
              "application/json": {
                "schema": {
                  "": "#/components/schemas/Cart"
                }
              }
            }
          }
        }
      }
    },
    "/cart/items": {
      "post": {
        "summary": "Agrega un item al carrito",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sku_productos": {
                    "type": "integer"
                  },
                  "cantidad": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Item agregado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/cart/items/{item_id}": {
      "put": {
        "summary": "Actualiza cantidad de un item",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "item_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "cantidad": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Carrito actualizado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "cart": {
                      "": "#/components/schemas/Cart"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Elimina un item del carrito",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "item_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Item eliminado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "cart": {
                      "": "#/components/schemas/Cart"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/orders": {
      "get": {
        "summary": "Obtiene las órdenes del usuario",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de órdenes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "orders": {
                      "type": "array",
                      "items": {
                        "": "#/components/schemas/Order"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crea una nueva orden",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "moneda": {
                    "type": "string"
                  },
                  "costo_envio": {
                    "type": "number",
                    "format": "float"
                  },
                  "descuento": {
                    "type": "number",
                    "format": "float"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Orden creada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "order": {
                      "": "#/components/schemas/Order"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}